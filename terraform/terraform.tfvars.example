aws_region  = "us-east-1"
environment = "dev"

# EC2 Configuration
instance_type = "t3.small"  # t3.small = 2 vCPU, 2 GB RAM
volume_size   = 20          # GB

# SSH Access - paste your public key here
# Generate with: ssh-keygen -t ed25519 -f ~/.ssh/kv-store -C "kv-store"
ssh_public_key = "ssh-ed25519 AAAAC3... your-email@example.com"

# Security
allowed_ssh_cidr    = ["0.0.0.0/0"]  # Your IP: ["1.2.3.4/32"]
allowed_client_cidr = ["0.0.0.0/0"]  # Restrict to your app IPs
